<?xml version="1.0" encoding="utf-8"?>
<plugin 
    id="cordova-plugin-notifications" 
    version="1.0.0" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <name>Notifications</name>

    <js-module name="notifications" src="www/Notifications.js">
        <clobbers target="Notifications"/>
    </js-module>

    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="Notifications">
                <param name="android-package" value="com.ahmedayachi.notifications.Notifications" />
            </feature>
        </config-file>
        <source-file src="src/android/Notifications.java" target-dir="src/com/ahmedayachi/notifications/Notifications"/>
        <source-file src="src/android/TapHandler.java" target-dir="src/com/ahmedayachi/notifications/TapHandler"/>
    </platform>

    <platform name="browser">
        <js-module src="src/browser/Notifications.js" name="Notifications">
            <runs/>
        </js-module>
    </platform>
    
</plugin>