<?xml version="1.0" encoding="utf-8"?>
<plugin 
    id="cordova-plugin-notifier" 
    version="1.0.0" 
    xmlns="http://apache.org/cordova/ns/plugins/1.0" 
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <name>Notifier</name>

    <js-module name="notifier" src="www/Notifier.js">
        <clobbers target="Notifier"/>
    </js-module>

    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="Notifier">
                <param name="android-package" value="com.ahmedayachi.notifier.Notifier" />
            </feature>
        </config-file>
        <source-file src="src/android/Notifier.java" target-dir="src/com/ahmedayachi/notifier/Notifier"/>
        <source-file src="src/android/TapHandler.java" target-dir="src/com/ahmedayachi/notifier/TapHandler"/>
    </platform>

    <platform name="browser">
        <js-module src="src/browser/Notifier.js" name="browserNotifier">
            <clobbers target="Notifier"/>
        </js-module>
    </platform>
    
</plugin>